{
  "name": "anchor-shell-client",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "test": "mocha --require tsx --extensions ts --timeout 60000 'tests/**/*_test.ts'"
  },
  "dependencies": {
    "@coral-xyz/anchor": "0.32.1",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.90.0",
    "bn.js": "^5.2.2",
    "dotenv": "^16.0.0",
    "ethereum-cryptography": "^3.2.0",
    "tweetnacl": "^1.0.3"
  },
  "devDependencies": {
    "@types/bn.js": "^5.1.5",
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "chai": "^4.4.1",
    "eslint": "^8.56.0",
    "mocha": "^10.2.0",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.0",
    "tsx": "^4.7.0"
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "spec": [
      "tests/**/*_test.ts"
    ],
    "timeout": 60000
  }
}